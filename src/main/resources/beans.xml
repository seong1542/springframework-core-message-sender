<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">
<context:annotation-config />

    <bean id="smsMessageSender" class="org.nhnacademy.edu.springframework.sender.SmsMessageSender" scope="singleton">
<qualifier type ="org.nhnacademy.edu.springframework.sender.MessageQualifier"></qualifier>
    </bean>
    <bean id="emailMessageSender" class="org.nhnacademy.edu.springframework.sender.EmailMessageSender" scope="prototype">
    </bean>
    <bean id="messageSendService" class="org.nhnacademy.edu.springframework.sender.MessageSendService">
    </bean>

</beans>